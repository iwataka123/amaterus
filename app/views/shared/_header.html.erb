<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='top-contents'>
    <%= link_to image_tag("company_logo.png", class:"company-icon"), root_path %>
    <div class="company-name">Yaruki Industry</div>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <li class='user-info'>職員番号：<%= current_user.unique_user_id %></li>
      <li class='user-info'>職員名：<%= current_user.name %></li>
      <% if current_user.unique_user_id == "000001" %>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %></li>
      <% end %>
    </ul>
  </div>
</header>