<%= render "shared/header" %>
<div class="show-article">
  <p class="show-article-title">
    <%= @article.title %>
  </p>
  <p class="show-article-post-date">
    <%= @article.created_at.strftime("%Y年 %m月 %d日") %>
  </p>
  <% if @article.image.attached? %>
    <%= image_tag @article.image.variant(resize: '500x500'), class: "show-article-image" %>
  <% else %>
    <%= image_tag 'noimage.png', class: "show-article-image", alt: "No image available" %>
  <% end %>
  <p class="show-article-content">
    <%= @article.content %>
  </p>
</div>

<% if current_user.id == @article.user_id %>
  <div class="change-article">
    <div class="edit-article">
      <%= link_to "編集", edit_article_path(@article), class:"edit-btn" %>
    </div>
    <div class="delete-article">
      <%= link_to "削除", article_path(@article), data: { turbo_method: :delete }, class:"delete-btn" %>
    </div>
  </div>
<% end %>

<div class="return-toppage">
  <%= link_to "トップページへ戻る", root_path, class:"return-btn" %>
</div>

<%= render "shared/footer" %>